<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout_ListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_Switch_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="@string/switch_name"
        android:textColor="@color/textMainColour"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/linearLayout_SwitchList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/offButton_ListView"
            android:layout_width="125dp"
            android:layout_height="78dp"
            android:background="@drawable/round_button"
            android:text="OFF"
            android:textColor="@color/textMainColour" />

        <ImageView
            android:id="@+id/imageView_ListView"
            android:layout_width="79dp"
            android:layout_height="85dp" />

        <Button
            android:id="@+id/onButton_ListView"
            android:layout_width="125dp"
            android:layout_height="79dp"
            android:background="@drawable/round_button"
            android:text="ON"
            android:textColor="@color/textMainColour" />

    </LinearLayout>

</LinearLayout>